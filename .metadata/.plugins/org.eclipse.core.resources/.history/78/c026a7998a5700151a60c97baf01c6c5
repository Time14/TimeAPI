package debug;

import org.lwjgl.opengl.GL11;

public class Debug {
	
	/**
	 * Draws a rectangle, should only be used for debugging.
	 * 
	 * @param x position
	 * @param y position
	 * @param w width
	 * @param h height
	 */
	public static void drawRect(int x, int y, int w, int h) {
		
		
		//Set color
		GL11.glColor3f(1, 1, 1);
		
		//Begin
		GL11.glBegin(GL11.GL_QUADS);
		    GL11.glVertex2f(x - w/2,y - h/2);
		    GL11.glVertex2f(x + w/2,y - h/2);
		    GL11.glVertex2f(x + w/2,y + h/2);
		    GL11.glVertex2f(x - w/2,y + h/2);
	    GL11.glEnd();	
	}
	
	
	/**
	 * Prints the message and where it was called.
	 * 
	 * @param message The message you wish to print.
	 * @param i The deepth of the caller function.
	 */
	public static void Log(String message, int i) {
		StackTraceElement[] ste = Thread.currentThread().getStackTrace();
		System.out.println("[" + ste[2].getFileName() + " @ " + ste[2].getLineNumber() + "] " + message);
	}
	
}
